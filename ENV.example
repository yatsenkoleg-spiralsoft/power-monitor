# Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните реальными значениями
# НЕ КОММИТЬТЕ .env в Git!

# Tuya API credentials (обязательно)
TUYA_ACCESS_ID=your_tuya_access_id
TUYA_ACCESS_KEY=your_tuya_access_key

# MySQL connection (обязательно)
MYSQL_HOST=your_mysql_host
MYSQL_PORT=3306
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password

# Tuya API URL (опционально)
TUYA_API_URL=https://openapi.tuyaeu.com

# Device IDs (опционально, если не указано - используются значения по умолчанию)
# DEVICE_IDS={"Розетка 1": "device_id_1", "Розетка 2": "device_id_2"}

# Server port (опционально)
PORT=8080
